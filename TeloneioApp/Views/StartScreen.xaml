<Window x:Class="TeloneioApp.Views.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:TeloneioApp.ViewModels"
        xmlns:local="clr-namespace:TeloneioApp.Views"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Teloneio App" 
        Height="300" Width="300">
    <Window.Resources>
        <viewModel:StartScreenViewModel x:Key="ViewModel"/>
    </Window.Resources>
    <StackPanel DataContext="{Binding Source={StaticResource ViewModel}}">
        <Menu HorizontalAlignment="Stretch" Height="25" VerticalAlignment="Top">
            <MenuItem Header="_Home" Click="HomeWindow_Click"/>
            <MenuItem Header="Actions">
                <MenuItem Header="_Customers" Click="CutomersPage_Click">
                </MenuItem>
                <MenuItem Header="_Import Form" Click="ImportFormPage_Click">
                </MenuItem>
            </MenuItem>
        </Menu>
        <Frame x:Name="NavigationFrame"
               Margin="0"
               NavigationUIVisibility="Hidden" >
        </Frame>
    </StackPanel>
</Window>
