                        CommandParameter="{Binding}" 
                        FontSize="16" Width="157"></Button>
                <Button Content="Show Original" 
                        Command="{Binding ShowXml, Source={StaticResource ViewModel}}"
                        CommandParameter="{Binding}" 
                        FontSize="16" Width="157"></Button>
            </ListView.Items>
